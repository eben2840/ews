mixin Login
  +Section({image: `${CWD}assets/img/login.jpg`, className: "overlay overlay-1"}).text-center.py-0
    .row.min-vh-100.align-items-center.justify-content-center.pt-11.pb-8
      .col-md-7.col-lg-6.col-xl-5.mx-auto(data-zanim-timeline!={} data-zanim-trigger="scroll")
        .overflow-hidden
          .card.mx-lg-3.bg-100(data-zanim-xs!={delay: 0.1, duration: 1})
            .card-body.p-md-5
              h4.mb-3 Login with Freya
              form.text-start.mt-4
                .row.align-items-center
                  .col-12
                    .input-group
                      .input-group-text.bg-100
                        span.far.fa-user
                      input(type="text" placeholder="Email or username" aria-label="Text input with dropdown button").form-control
                  .col-12.mt-2.mt-sm-4
                    .input-group
                      .input-group-text.bg-100
                        span.fas.fa-lock
                      input(type="Password" placeholder="Password" aria-label="Text input with dropdown button").form-control

                .row.align-items-center.mt-4
                  .col-6
                    .form-check.mb-0
                      input#rememberMe.form-check-input(type='checkbox' value='')
                      label.form-check-label.text-500.mb-0(for='rememberMe')
                        | Remember Me

                  .col-6.mt-2.mt-sm-0.ps-0
                    button.btn.btn-primary.w-100(type="submit") Login