mixin SwiperCarousel
  +CodePreviewBlock({combine: true})
    .swiper.theme-slider(data-swiper!={
      autoplay: true,
      spaceBetween: 30,
      loop: true,
      slidesPerView: 1,
      breakpoints: {
        670: {
          slidesPerView: 2,
        },
        1200: {
          slidesPerView: 3
        },
      }
    })
      .swiper-wrapper
        .swiper-slide
          img(src=`${CWD}assets/img/img_1.jpg` alt="image").w-100
        .swiper-slide
          img(src=`${CWD}assets/img/img_2.jpg` alt="image").w-100
        .swiper-slide
          img(src=`${CWD}assets/img/img_3.jpg` alt="image").w-100
        .swiper-slide
          img(src=`${CWD}assets/img/img_1.jpg` alt="image").w-100 
        .swiper-slide
          img(src=`${CWD}assets/img/img_2.jpg` alt="image").w-100 
        .swiper-slide
          img(src=`${CWD}assets/img/img_3.jpg` alt="image").w-100   
      .swiper-nav
        .swiper-button-prev
          span.fas.fa-chevron-left
        .swiper-button-next
          span.fas.fa-chevron-right

mixin SwiperWithoutThumbnail 
  +CodePreviewBlock({
    combine: true, 
    title: 'Swiper without thumbnail',
  })
    .swiper.theme-slider(data-swiper!={
      autoplay: true,
      spaceBetween: 5,
      loop: true,
      loopedSlides: 5,
      slideToClickedSlide: true,
    })
      .swiper-wrapper
        .swiper-slide
          img(src=`${CWD}assets/img/banner_4.jpg` alt="image").img-fluid
        .swiper-slide  
          img(src=`${CWD}assets/img/banner_1.jpg` alt="image").img-fluid
      .swiper-nav
        .swiper-button-prev
          span.fas.fa-chevron-left
        .swiper-button-next
          span.fas.fa-chevron-right 

mixin SwiperWithThumbnail
  +CodePreviewBlock({
    combine: true,
    title: 'Swiper with thumbnail',
    desc: "This can be simply done by using the attribute. For Swiper with thumbnail use <code>thumb </code>options in your pug/HTML. You can place thumbnail to a specific parent by providing <code>thumbOptions: '#parentID' </code>value in <code>thumb </code>options. Otherwise thumbnail will place after the <code>.swiper </code>element.",
  })  
    .swiper.theme-slider(data-swiper!={
      spaceBetween: 5,
      loop: true,
      loopedSlides: 5,
      thumb: {
        spaceBetween: 5,
        slidesPerView: 5,
        loop: true,
        freeMode: true,
        grabCursor: true,
        loopedSlides: 5, 
        centeredSlides: true,
        slideToClickedSlide: true,
        watchSlidesVisibility: true,
        watchSlidesProgress: true,
      },
      slideToClickedSlide: true,
    })
      .swiper-wrapper
        .swiper-slide
          img(src=`${CWD}assets/img/blog_header.jpg` alt="image").img-fluid
        .swiper-slide  
          img(src=`${CWD}assets/img/elements_header.jpg` alt="image").img-fluid
        .swiper-slide  
          img(src=`${CWD}assets/img/header_3.jpg` alt="image").img-fluid
        .swiper-slide  
          img(src=`${CWD}assets/img/banner_4.jpg` alt="image").img-fluid

      .swiper-nav
        .swiper-button-prev
          span.fas.fa-chevron-left
        .swiper-button-next
          span.fas.fa-chevron-right
