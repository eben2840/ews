extends ../layouts/LayoutPages
include ../mixins/elements/Grid
include ../mixins/common/BlockHeader
include ../mixins/common/CodePreviewBlock

append variables 
  - var pageHeaderConfig = { title: "Grid", subtitle: "Modular elements", img: "elements_header.jpg" }

append mainContent
  - var grids = [12, 6, 4, 3, 2, 1]
  +Section 
    .row.justify-content-center 
      .col-lg-10
        +BlockHeader({
          title: 'Bootstrap 4 grid system',
          desc: 'We use bootstrap 4 grid system. For more details see <a href="https://getbootstrap.com/docs/4.0/layout/grid/" target="_blank">Documentation â†’</a>'
        })

        each grid in grids 
          +Grid(grid)

